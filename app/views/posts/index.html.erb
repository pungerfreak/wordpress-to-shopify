<style>
  .image-with-caption {
    display: table;
    float: left;
    padding: 10px 20px 10px 0;
  }

  .image-with-caption img {
    width: 100%;
  }

  .image-with-caption span {
    display: table-caption;
    caption-side: bottom;
    /*display: inline-block;*/
    /*width: 100%;*/
    text-align: center;
    /*padding-top: 10px;*/
  }

  .content-image {
    display: block;
    float: right;
    padding: 10px 20px;
  }
  .content-image--large {
    float: none;
    margin: 20px auto;
    max-width: calc(100% - 40px);

  }
</style>

<% @posts.each do |post| %>
  <h4><%= post.id %>: <%= post.post_title %></h4>
  <%= PostConverterService.call(post.post_content).html_safe %>
  <div style="width: 100%; height: 10px; margin: 20px 0; background-color: pink;">&nbsp;</div>
<% end %>
